{
  "name": "restaurant-management-api",
  "version": "1.0.0",
  "description": "Restaurant Queue & Table Management System API",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:init": "ts-node src/scripts/init-db.ts",
    "db:migrate": "ts-node src/migrations/migrate.ts",
    "db:docker:up": "docker run -d --name rms-mysql -e MYSQL_ROOT_PASSWORD=${MYSQL_ROOT_PASSWORD:-example} -e MYSQL_DATABASE=${DB_NAME:-restaurant_management} -p 3306:3306 mysql:8.0 --default-authentication-plugin=mysql_native_password",
    "db:docker:down": "docker rm -f rms-mysql || true",
    "test:integration": "cross-env RUN_INTEGRATION=true npm test --silent"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "mysql2": "^3.16.0",
    "socket.io": "^4.7.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "nodemon": "^3.1.11",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0"
  }
}
